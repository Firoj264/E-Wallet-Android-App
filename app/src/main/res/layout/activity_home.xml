<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.myecard.ewallet.HomeActivity"
    tools:layout_editor_absoluteY="71dp">

    <TextView
        android:id="@+id/textView3"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="7dp"
        android:text="Your Balance"
        android:fontFamily="@font/berkshire_swash"
        android:textColor="#F80505"
        android:textSize="22sp"
        android:textStyle="bold"/>


    <EditText
        android:id="@+id/amountBalance"
        android:layout_width="171dp"
        android:layout_height="44dp"
        android:layout_gravity="center"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:editable="false"
        android:ems="10"
        android:textColor="#070707"
        android:enabled="false"
        android:hint="Amount"
        android:inputType="textPersonName"
        android:textAlignment="center"
        tools:ignore="Deprecated" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="3dp"
        android:layout_gravity="center">
        <RelativeLayout
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <TextView
                android:id="@+id/addMoneyBtntxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/addMoneyBtn"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:fontFamily="@font/berkshire_swash"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="9dp"
                android:text="Add Money"
                android:textColor="#3E3D3D"
                android:textSize="10sp"
                tools:ignore="HardcodedText"
                android:gravity="center" />

            <Button
                android:id="@+id/addMoneyBtn"
                android:layout_width="70dp"
                android:layout_height="55dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/addmoney1" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <TextView
                android:id="@+id/sendMoneyBtntxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sendMoneyBtn"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:fontFamily="@font/berkshire_swash"
                android:layout_marginStart="5dp"
                android:layout_marginBottom="1dp"
                android:textAlignment="center"
                android:text="Lending"
                android:textColor="#3E3D3D"
                android:textSize="10sp"
                android:gravity="center"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/sendMoneyBtn"
                android:layout_width="70dp"
                android:layout_height="55dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="4dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="3dp"
                android:background="@drawable/lending" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <TextView
                android:id="@+id/paymentHistoryBtntxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/paymentHistoryBtn"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:fontFamily="@font/berkshire_swash"
                android:layout_marginStart="0dp"
                android:text="History"
                android:textAlignment="center"
                android:textColor="#3E3D3D"
                android:textSize="10sp"
                android:gravity="center"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/paymentHistoryBtn"
                android:layout_width="73dp"
                android:layout_height="55dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="4dp"
                android:background="@drawable/history1"
                android:textColor="@android:color/holo_red_dark" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <TextView
                android:id="@+id/acceptMoneyBtntxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/acceptMoneyBtn"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:fontFamily="@font/berkshire_swash"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="0dp"
                android:gravity="center"
                android:text="Accept"
                android:textAlignment="center"
                android:textColor="#3E3D3D"
                android:textSize="10sp"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/acceptMoneyBtn"
                android:layout_width="73dp"
                android:layout_height="56dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="7dp"
                android:background="@drawable/accept1"
                android:textColor="@android:color/holo_red_dark" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_gravity="center">
        <RelativeLayout
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <TextView
                android:id="@+id/addMoneyBtntxt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/paybillBtn1"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:fontFamily="@font/berkshire_swash"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="9dp"
                android:text="Pay Bill"
                android:textColor="#3E3D3D"
                android:textSize="10sp"
                tools:ignore="HardcodedText"
                android:gravity="center" />

            <Button
                android:id="@+id/paybillBtn1"
                android:layout_width="70dp"
                android:layout_height="55dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/paybil" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <TextView
                android:id="@+id/sendMoneyBtntxt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sendMoneyBtn1"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="5dp"
                android:layout_marginBottom="1dp"
                android:fontFamily="@font/berkshire_swash"
                android:textAlignment="center"
                android:text="Add Salary"
                android:textColor="#3E3D3D"
                android:textSize="10sp"
                android:gravity="center"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/sendMoneyBtn1"
                android:layout_width="70dp"
                android:layout_height="55dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="4dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="3dp"
                android:background="@drawable/addsalary" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <TextView
                android:id="@+id/paymentHistoryBtntxt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/paymentHistoryBtn1"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="0dp"
                android:text="Send Money"
                android:textAlignment="center"
                android:textColor="#3E3D3D"
                android:textSize="10sp"
                android:fontFamily="@font/berkshire_swash"
                android:gravity="center"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/paymentHistoryBtn1"
                android:layout_width="73dp"
                android:layout_height="55dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="4dp"
                android:background="@drawable/send1" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <TextView
                android:id="@+id/acceptMoneyBtntxt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/expressesyBtn1"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="0dp"
                android:gravity="center"
                android:text="Expenses"
                android:fontFamily="@font/berkshire_swash"
                android:textAlignment="center"
                android:textColor="#3E3D3D"
                android:textSize="10sp"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/expressesyBtn1"
                android:layout_width="73dp"
                android:layout_height="56dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="7dp"
                android:background="@drawable/expenses"
                android:textColor="@android:color/holo_red_dark" />
        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:layout_gravity="center"
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:textColor="#246E9F"
        android:fontFamily="@font/berkshire_swash"
        android:text="Use My E-Wallet and get cash back"
        android:textSize="14sp"
        android:textStyle="bold" />


    <ListView
        android:id="@+id/shopListView"
        android:layout_width="395dp"
        android:layout_height="344dp"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:editable="false" />
    <Button
        android:layout_gravity="center"
        android:id="@+id/signOutBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:backgroundTint="#EFE694"
        android:textStyle="bold"
        android:background="@null"
        android:text="Sign OUT"
        android:textColor="@color/colorPrimaryDark" />

</LinearLayout>
